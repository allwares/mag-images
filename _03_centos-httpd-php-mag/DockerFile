FROM allwares/centos-httpd-php:2.3 
WORKDIR /var/www/html/

COPY --from=allwares/mag-base-zip:2.3 /magento.zip ./
COPY httpd.conf /etc/httpd/conf/
COPY php.ini /etc/

RUN unzip ./magento.zip -d ./ \
 		&& rm -f ./magento.zip 


RUN chown -R apache:apache /var/www/html/var/ \
		&& chmod -R 775 /var/www/html/var/ \
		&& chown -R apache:apache /var/www/html/pub/ \
		&& chmod -R 775 /var/www/html/pub/ 
		

